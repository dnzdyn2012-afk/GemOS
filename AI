import os
import sys
try:
    from groq import Groq
except ImportError:
    print("âŒ Hata: 'groq' paketi bulunamadÄ±.")
    sys.exit()


client = Groq(api_key="GROQ-API-HERE-CANT-LEAK-MINE")

def ai_sor(soru):
    try:
        completion = client.chat.completions.create(
            # MODELÄ° GÃœNCELLEDÄ°K: Llama 3.3 ÅŸu an Groq'un en iyisi
            model="llama-3.3-70b-versatile", 
            messages=[
                {"role": "system", "content": "Sen GemOS asistanÄ±sÄ±n. Samimi, teknik ve kÄ±sa cevap ver."},
                {"role": "user", "content": soru}
            ],
            temperature=0.7,
        )
        return completion.choices[0].message.content
    except Exception as e:
  
        return f"âŒ GemAI HatasÄ±: {e}\n(Ä°pucu: Model ismini 'llama-3.1-8b-instant' yapmayÄ± deneyebilirsin.)"

def main():
    print("\nðŸ’Ž GemAI v2.5 [Updated Model Engine]")
    if len(sys.argv) > 1:
        print(f"\nGemAI: {ai_sor(' '.join(sys.argv[1:]))}\n")
    else:
        while True:
            user_input = input(">> ")
            if user_input.lower() in ['exit', 'q', 'Ã§Ä±kÄ±ÅŸ']: break
            print(f"\nGemAI: {ai_sor(user_input)}")

if __name__ == "__main__":
    main()
